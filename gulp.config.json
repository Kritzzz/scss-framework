{
  "styles": {
    "scss": "./scss/**/*.scss",
    "output": "./",
    "outputName": "style.css",
    "outputStyle": "compressed",
    "ignore": "!scss/mixins/**"
  },
  "scripts": {
    "entry": "./assets/scripts/*.js",
    "output": "./assets/scripts/dist/",
    "outputName": "scripts.min.js"
  },
  "images": {
    "input": "./assets/images/*",
    "output": "./assets/images/dist/",
    "svg": {
      "input": "assets/images/svg/*",
      "output": "assets/images/svg/dist/"
    }
  }
}
